{
  "name": "@buildos/worker",
  "version": "1.0.0",
  "description": "Background worker for generating daily briefs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "worker": "tsx watch src/worker.ts",
    "scheduler": "tsx watch src/scheduler.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:scheduler": "vitest run tests/scheduler.test.ts"
  },
  "dependencies": {
    "@buildos/shared-types": "workspace:*",
    "@buildos/supabase-client": "workspace:*",
    "@buildos/twilio-service": "workspace:*",
    "@supabase/supabase-js": "^2.38.4",
    "@types/nodemailer": "^7.0.1",
    "bullmq": "^5.58.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "marked": "^14.1.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "sanitize-html": "^2.17.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/sanitize-html": "^2.16.0",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.54.0",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
