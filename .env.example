# ============================================
# BuildOS Platform Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# SHARED VARIABLES (used by both apps)
# --------------------------------------------

# Supabase Configuration
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key
PRIVATE_SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-key

# OpenAI Configuration
OPENAI_API_KEY=sk-...

# --------------------------------------------
# WEB APP SPECIFIC (apps/web)
# --------------------------------------------

# Google OAuth
PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret

# Stripe (optional - set ENABLE_STRIPE=false to disable)
ENABLE_STRIPE=true
STRIPE_SECRET_KEY=sk_...
STRIPE_WEBHOOK_SECRET=whsec_...
PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_...

# App Configuration
PUBLIC_APP_URL=http://localhost:5173
NODE_ENV=development

# Email Configuration (for web app emails)
PRIVATE_DJ_GMAIL_APP_PASSWORD=
PRIVATE_ZACH_GMAIL_APP_PASSWORD=

# --------------------------------------------
# WORKER SPECIFIC (apps/worker)
# --------------------------------------------

# Worker Port
PORT=3001

# Queue Configuration
QUEUE_POLL_INTERVAL=5000
QUEUE_BATCH_SIZE=5
QUEUE_MAX_RETRIES=3
QUEUE_ENABLE_PROGRESS_TRACKING=true
QUEUE_ENABLE_HEALTH_CHECKS=true

# Email Configuration (for worker emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@buildos.app